<Window x:Class="TexPack.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TexPack"
        mc:Ignorable="d"
        Title="TexPac" Height="298.307" Width="241.976" Cursor="Hand" ResizeMode="NoResize" Background="{x:Null}">
    <Grid x:Name="clearButton" Background="LightBlue">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <ListBox x:Name="imageList" Margin="10,6,10,41" Drop="ImageList_Drop" DragOver="ImageList_DragOver" AllowDrop="True" Background="#FF87AEBB" Foreground="White">
        </ListBox>
        <Button x:Name="ExportImage" Content="Export" Margin="149,0,10,10" Click="ExportImage_Click" Height="20" VerticalAlignment="Bottom"/>
        <TextBox x:Name="paddingBox" Margin="10,0,176,10" TextWrapping="Wrap" Text="0" Height="20" VerticalAlignment="Bottom"/>
        <TextBlock x:Name="spriteLabel" Margin="10,96,10,108" TextWrapping="Wrap" Text="Drag Sprites Here" Opacity="0.25" FontSize="18" IsHitTestVisible="False" TextAlignment="Center" RenderTransformOrigin="0.493,0.545"/>
        <Button x:Name="clear" Content="Clear" Margin="67,0,92,10" Click="clear_Click" Height="20" VerticalAlignment="Bottom"/>
    </Grid>
</Window>
